{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",	// Requires MinGW to be installed, optionally change to different compiler, MVCXX, clang, native g++, etc.
